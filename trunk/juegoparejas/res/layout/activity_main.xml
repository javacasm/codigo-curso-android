<TableLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCB58" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/puntuacion"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TableRow
        android:id="@+id/tableRow1"
        style="@style/fila"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv11"
            style="@style/imagen"
            android:onClick="pulsaImagen" />

        <ImageView
            android:id="@+id/iv12"
            style="@style/imagen"
            android:onClick="pulsaImagen" />

        <ImageView
            android:id="@+id/iv13"
            style="@style/imagen"
            android:onClick="pulsaImagen" />

    </TableRow>

    <TableRow
        android:id="@+id/TableRow03"
        style="@style/fila">

        <ImageView
            android:id="@+id/iv21"
            style="@style/imagen" 
            android:onClick="pulsaImagen"/>

        <ImageView
            android:id="@+id/iv22"
            style="@style/imagen"
            android:onClick="pulsaImagen" />

        <ImageView
            android:id="@+id/iv23"
            style="@style/imagen"
            android:onClick="pulsaImagen" />

    </TableRow>

    <TableRow
        android:id="@+id/TableRow02"
        style="@style/fila">
		
        <ImageView
            android:id="@+id/iv31"
            style="@style/imagen"
            android:onClick="pulsaImagen" />

        <ImageView
            android:id="@+id/iv32"
            style="@style/imagen"
            android:onClick="pulsaImagen" />

        <ImageView
            android:id="@+id/iv33"
            style="@style/imagen"
            android:onClick="pulsaImagen" />

    </TableRow>

    <TableRow
        android:id="@+id/TableRow01"
        style="@style/fila" >

        <ImageView
            android:id="@+id/iv41"
            style="@style/imagen" 
            android:onClick="pulsaImagen" />

        <ImageView
            android:id="@+id/iv42"
            style="@style/imagen" 
            android:onClick="pulsaImagen" />

        <ImageView
            android:id="@+id/iv43"
            style="@style/imagen" 
            android:onClick="pulsaImagen" />

    </TableRow>

    <Chronometer
        android:id="@+id/chronometer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="Chronometer"
        android:textSize="25dp"
        android:typeface="monospace" />

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="startCrono"
            android:text="@string/start" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="stopCrono"
            android:text="@string/stop" />

    </TableRow>

</TableLayout>